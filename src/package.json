{
  "name": "cm-markdown",
  "version": "1.0.0",
  "description": "A CodeMirror plugin for enhanced markdown editing with hidden markdown syntax characters",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
